{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div>
            <a href="{{ path('subscription') }}">Learn about subscription</a>
        </div>
        <h1>Last recipes</h1>

        {% for recipe in recipes %}
            <p>{{ recipe.getName }} -
                <a href="{{ path('recipe_show', { slug: recipe.getSlug }) }}">Show</a>
                <form method="POST" action="{{ path('recipe_delete') }}">
                    <input type="hidden" name="recipeId" value="{{ recipe.getId }}" />
                    <input type="hidden" name="_method" value="DELETE" />
                    <input type="submit" name="delete" value="Delete" />
                </form>
            </p>
        {% endfor %}
        <a href="{{ path('recipes') }}">Show all</a>
    </div>
{% endblock %}
