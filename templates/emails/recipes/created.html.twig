<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ recipe.getName }}</h1>

    {{ recipe.getDescription }} <br/>
    Difficulty level: {{ recipe.difficulty }}<br/>
    Ingredients:
    {% for ingredient in recipe.getIngredients %}
        <a href="{{ url('search_ingredient', { ingredient: ingredient.getName}) }}">{{ ingredient.getName }}</a>
    {% endfor %}
    <br />
    Tags:
    {% for tag in recipe.getTags %}
        <a href="{{ url('search_tag', { tag: tag.getName }) }}">{{ tag.getName }}</a>
    {% endfor %}
</div>