{% extends 'base.html.twig' %}

{% block title %}Search `{{ query }}`{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Search recipes for: `{{ query }}`</h1>

        <h2>Results from recipes</h2>
        {% for recipe in recipeResult %}
            <p>{{ recipe.getName }} - <a href="{{ path('recipe_show', { recipeId: recipe.getId }) }}">Show</a></p>
        {% endfor %}

        <h2>Results from ingredients</h2>
        {% for recipe in ingredientResult %}
            <p>{{ recipe.getName }} - <a href="{{ path('recipe_show', { recipeId: recipe.getId }) }}">Show</a></p>
        {% endfor %}
    </div>
{% endblock %}
