{% extends 'base.html.twig' %}

{% block title %}Recipe {{ recipe.getName }} - Make it cook!{% endblock %}

{% block body %}
    <div class="bradcam_area bradcam_bg_1">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text text-center">
                        <h3>{{ recipe.getName }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="recepie_details_area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-6 col-md-6">
                    <div class="recepies_thumb">
                        <img src="{{ asset('assets/img/recepie/recepie_details.png') }}" alt="">
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="recepies_info">
                        <h3>{{ recipe.getName }}</h3>
                        <p>{{ recipe.getDescription }}</p>

                        <div class="resepies_details">
                            <ul>
                                <li><p><strong>Rating</strong> :{% for i in 0..recipe.getDifficulty %}<i class="fa fa-star"></i>{% endfor %}</p></li>
                                <li><p><strong>Time</strong> : --- Mins </p></li>
                                <li><p><strong>Tags</strong> :
                                        {% for tag in recipe.getTags %}
                                            <a href="{{ path('search_tag', { tag: tag.getName }) }}">{{ tag.getName }}</a>
                                        {% endfor %}
                                    </p>
                                </li>
                            </ul>
                        </div>
                        <div class="links">
                            <a href="#"> <i class="fa fa-facebook"></i> </a>
                            <a href="#"> <i class="fa fa-twitter"></i> </a>
                            <a href="#"> <i class="fa fa-linkedin"></i> </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12">
                    <div class="recepies_text">
                        <p>{{ recipe.getDescription }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
